{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run all tests",
            "type": "shell",
            "command": "go",
            "args": [
                "test",
                "-cover",
                "./..."
            ],
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "Lint code",
            "type": "shell",
            "command": "golangci-lint",
            "args": [
                "run",
                "./..."
            ],
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "Lint and fix code",
            "type": "shell",
            "command": "golangci-lint",
            "args": [
                "run",
                "./...",
                "--fix"
            ],
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "Build binary",
            "type": "shell",
            "command": "go",
            "linux": {
                "args": [
                    "build",
                    "-ldflags",
                    "-X fisherman/constants.Version=${input:appVersion}",
                    "-o",
                    "fisherman",
                    "${workspaceFolder}/main.go"
                ]
            },
            "osx": {
                "args": [
                    "build",
                    "-ldflags",
                    "-X fisherman/constants.Version=${input:appVersion}",
                    "-o",
                    "fisherman",
                    "${workspaceFolder}/main.go"
                ]
            },
            "windows": {
                "args": [
                    "build",
                    "-ldflags",
                    "-X fisherman/constants.Version=${input:appVersion}",
                    "-o",
                    "fisherman.exe",
                    "${workspaceFolder}/main.go"
                ]
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "Install",
            "type": "shell",
            "command": "go",
            "args": [
                "install",
                "-ldflags",
                "-X fisherman/constants.Version=${input:appVersion}",
            ],
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "Go generate",
            "type": "shell",
            "command": "go",
            "args": [
                "generate"
            ],
            "problemMatcher": []
        },
        {
            "label": "Generate mock",
            "type": "shell",
            "command": "minimock",
            "args": [
                "-i",
                "${input:packageSource}",
                "-o",
                "./mocks",
                "-s",
                "_mock.go"
            ],
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "appVersion",
            "type": "command",
            "command": "shellCommand.execute",
            "args": {
                "command": "git tag --sort=-refname",
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "id": "packageSource",
            "default": "fisherman/",
            "type": "promptString",
            "description": "package"
        },
    ]
}
